{
  "files": [
    "index.ts",
    "examples/simple.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "umd",
    "target": "es5",
    "types": [
      "node",
      "node-fetch"
    ],
    "downlevelIteration": true,
    "strict": true,
    "allowJs": true,
    "alwaysStrict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "listEmittedFiles": true,
    "removeComments": true,
    "newLine": "LF",
    "outDir": ".",
    "pretty": true,
    "watch": false,
    "listFiles": true,
    "lib": [
      "es5",
      "es6",
      "es7"
    ],
    "inlineSourceMap": true
  },
  "exclude": [
    "examples",
    "node_modules"
  ]
}
